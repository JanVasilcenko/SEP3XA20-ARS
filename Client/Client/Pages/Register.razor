@page "/register"


<div class="section" style="margin-top:120px;">
    <div class="section-center">

        <div class="justify-content-center container d-flex">
            <div class="row">
                <div class="booking-form justify-content-center">
                    <div class="row">
                        <div class="col-12 my-3">
                            <p style="color:white; padding-left:25px; font-size:2rem;">
                                Sign up here
                            </p>
                        </div>
                    </div>
                    <form>
                        <div class="row">

                            <div class=" col-md-6 mx-auto">
                                <div class="form-group">
                                    <span class="form-label">First name</span>
                                    <input class="form-control" type="text" placeholder="First name">
                                </div>
                            </div>



                            <div class=" col-md-6 ">
                                <div class="form-group">
                                    <span class="form-label">Last name</span>
                                    <input class="form-control" type="text" placeholder="Last name">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class=" col-md-12">
                                <div class="form-group">
                                    <span class="form-label">Phone number</span>
                                    <input class="form-control" type="text" placeholder="Phone number">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mx-auto">
                                <div class="form-group">
                                    <span class="form-label" style="margin-bottom:10px;">Birthdate</span>
                                    <input class="form-control" type="date" placeholder="Birthdate">
                                </div>
                            </div>
                        </div>



                        <div class="row">
                            <div class="col-md-12 mx-auto">
                                <div class="form-group">
                                    <span class="form-label">Email</span>
                                    <input class="form-control" type="text" placeholder="Email">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12  mx-auto">
                                <div class="form-group">
                                    <span class="form-label">Password</span>
                                    <input class="form-control" type="password" placeholder="Password">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class=" col-md-12 mx-auto">
                                <button class="submit-btn">Register</button>
                            </div>
                        </div>





                    </form>
                </div>
            </div>
        </div>

    </div>
</div>


