@page "/register"
@using Client.Model
@using Client.Data
@using System.Text.Json
@inject IUserService userService
@inject NavigationManager navigationManager

<EditForm Model="@newUser" OnValidSubmit="@AddNewUser">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <body>

        <div class="section" style="margin-top:120px;">
            <div class="section-center">

                <div class="justify-content-center container d-flex">
                    <div class="row">
                        <div class="booking-form justify-content-center">
                            <div class="row">
                                <div class="col-12 my-3">
                                    <p style="color:white; padding-left:25px; font-size:2rem;" class="font-weight-bold">
                                        Sign up here
                                    </p>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="row">

                                    <div class=" col-md-6 mx-auto">
                                        <div class="form-group">
                                            <span class="form-label">First name</span>
                                            <input class="form-control" type="text" placeholder="First name" @bind-value="newUser.firstName">
                                        </div>
                                    </div>



                                    <div class=" col-md-6 ">
                                        <div class="form-group">
                                            <span class="form-label">Last name</span>
                                            <input class="form-control" type="text" placeholder="Last name" @bind-value="newUser.lastName">
                                        </div>
                                    </div>
                                </div>


                                <div class="row">
                                    <div class=" col-md-12">
                                        <div class="form-group">
                                            <span class="form-label">Phone number</span>
                                            <input class="form-control" type="text" placeholder="Phone number" @bind-value="newUser.phoneNumber">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 mx-auto">
                                        <div class="form-group">
                                            <span class="form-label" style="margin-bottom:10px;">Birthdate</span>
                                            <input class="form-control" type="date" placeholder="Birthdate" @bind-value="newUser.dateOfBirth">
                                        </div>
                                    </div>
                                </div>



                                <div class="row">
                                    <div class="col-md-12 mx-auto">
                                        <div class="form-group">
                                            <span class="form-label">Email</span>
                                            <input type="text" class="form-control" placeholder="Email" @bind-value="newUser.email" />
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12  mx-auto">
                                        <div class="form-group">
                                            <span class="form-label">Password</span>
                                            <input class="form-control" type="password" placeholder="Password" @bind-value="newUser.password">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class=" col-md-12 mx-auto">
                                        <button class="submit-btn">Register</button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div style="color:red" class="font-weight-bold">@errorMessage</div>
                                    </div>
                                </div>





                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>


    </body>
</EditForm>

@code {
    private User newUser = new User();
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        errorMessage = " ‏‏‎";
    }

    private async Task AddNewUser()
    {
        try
        {
            newUser.userType = "customer";
            User example = await userService.RegisterUser(newUser);
            navigationManager.NavigateTo("/login");
        }
        catch (JsonException)
        {
            navigationManager.NavigateTo("/login");
        }
        catch (Exception e)
        {
            errorMessage = e.Message;
        }
    }
}
